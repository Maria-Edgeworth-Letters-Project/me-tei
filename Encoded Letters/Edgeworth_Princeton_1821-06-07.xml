                  <addrLine>Copy to <unclear>Hunter</unclear>
                     <lb/>
                  </addrLine>
                  <addrLine>June 7<hi rend="superscript">h.</hi> 1821<lb/>
                  </addrLine>
               </address>
            </closer>
