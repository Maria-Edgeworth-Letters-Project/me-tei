                  <addrLine><persName ref="./Personography.xml#RelfL1">M<hi rend="superscript">r</hi> L. Relfe</persName> - Bookseller</addrLine>
                  <lb/>
                  <addrLine>Cornhill</addrLine>
                  <lb/>
               </address>
            </closer>
