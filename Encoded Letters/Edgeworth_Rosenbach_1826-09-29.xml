               <address>
                  <!--Include any text written on the address leaf; use a separate "addrLine" for each line and indicate line breaks. -->
                  <addrLine/><persName>M Carey Esq<hi rend="superscript">re</hi></persName>
                  <addrLine/><placeName>Philadelphia</placeName>
                  <addrLine><note>[another hand]JM Morton</note></addrLine>
                  <addrLine><note>[LibNote]Maria Edgeworth</note></addrLine>
                  <addrLine><note>[LibNote]Sept. 29. 1826</note></addrLine>
