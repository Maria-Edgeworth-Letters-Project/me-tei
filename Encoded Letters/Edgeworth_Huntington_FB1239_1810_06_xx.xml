                  <addrLine>
                     <persName ref="./Personography.xml#BeauF1">Capt<hi rend="superscript">n</hi>. Beaufort</persName>
                  </addrLine>
                  <addrLine>H: M Sloop</addrLine>
                  <addrLine>R. N</addrLine>
                  <addrLine>
                     <del>Mess<hi rend="superscript">r</hi> Brummany &amp; Dence</del>
                  </addrLine>
                  <addrLine>- Blossom Cecil Street</addrLine>
                  <addrLine>
                     <placeName ref="./Placeography.xml#London_ENK">London</placeName>
                  </addrLine>
                  <addrLine>Portsmouth</addrLine>
               </address>
                    Edgew<hi rend="superscript">h</hi>. 1810<lb/>
                    Congratulations from<lb/>
                    All hands<lb/>
            </closer>
