                  </persName>
                  <lb/>
                  <placeName ref="./Placeography.xml#London-Fields-Hackney-London_ENK">London fields<lb/>
                            Hackney</placeName>
                  <lb/>
                  <addrLine/>
                  <addrLine/>
                  <addrLine/>
               </address>
            </closer>
