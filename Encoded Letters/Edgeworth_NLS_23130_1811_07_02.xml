                        <persName ref="./Personography.xml#EdgeR1">Richard Lovell Edgeworth Esq</persName>
                  <placeName ref="./Placeography.xml#Edgeworthstown_IE">Edgeworthstown</placeName>
                  <unclear>Donahudin</unclear>
                  <unclear>Portpatrick</unclear>
