                  <addrLine>
                     <persName ref="./Personography.xml#RushR1">Rich<hi rend="superscript">d</hi> Rush Esq<hi rend="superscript">re</hi>
                     </persName>
                     <lb/>
                  </addrLine>
                  <note place="bottom">' The Memoranda '<lb/>
                     Miss Edgeworth.<lb/>
                  </note>
               </address>
            </closer>
         </div>
